<!-- new.html.erb -->
<h1>Add a Product</h1>
<% if @my_product.errors.any? %>
<ul>
	<% @my_product.errors.full_messages.each do |error_msg| %>
	<li> <%= error_msg %> </li>
	<% end %>
</ul>
<% end %>
<%= form_for [@my_user, @my_product] do |f| %>
<%= f.label :title %>
<%= f.text_field :title, :required => true %>
<br>
<%= f.label :description %>
<%= f.text_area :description, :required => true %>
<br>
<%= f.label :deadline %>
<%= f.date_field :deadline, :required => true %>
<br>

<%= f.button %>
<% end %>
